---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="header-container">
		<div class="header-left">
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<nav class="internal-links">
			<HeaderLink href="/o-meni">O meni</HeaderLink>
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/radio-amaterizam">Radio amaterizam</HeaderLink>
			<HeaderLink href="/izvidjastvo">IzviÄ‘astvo</HeaderLink>
			<HeaderLink href="/sajber-bezbednost">Sajber bezbednost</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/galerija">Galerija</HeaderLink>
			<HeaderLink href="/kontakt">Kontakt</HeaderLink>
		</nav>
		<div class="header-right">
			<ThemeToggle />
		</div>
	</div>
</header>
<style>
	header {
		margin: 0;
		padding: 1em 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background-color 0.3s ease;
	}

	[data-theme="dark"] header {
		background: #1a1a2e;
	}

	.header-container {
		max-width: 100%;
		width: 100%;
		margin: 0;
		padding: 0 1.5em;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5em;
	}

	.header-left {
		flex-shrink: 0;
	}

	h2 {
		margin: 0;
		font-size: 1.2em;
	}

	h2 a {
		text-decoration: none;
		color: var(--telecom-primary);
		font-weight: bold;
		letter-spacing: 0.5px;
		transition: color 0.3s ease;
	}

	h2 a:hover {
		color: var(--telecom-secondary);
	}

	.internal-links {
		display: flex;
		gap: 0.3em;
		align-items: center;
		justify-content: center;
		flex: 1;
		flex-wrap: wrap;
	}

	.internal-links :global(a) {
		padding: 0.6em 1em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 4px;
		transition: all 0.3s ease;
		font-weight: 500;
		font-size: 0.95em;
	}

	.internal-links :global(a:hover) {
		color: var(--telecom-primary);
		background: rgba(var(--gray-light), 0.1);
	}

	.internal-links :global(a.active) {
		color: var(--telecom-primary);
		background: rgba(var(--gray-light), 0.15);
		border-bottom: none;
	}

	.header-right {
		display: flex;
		align-items: center;
		gap: 0.8em;
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		.header-container {
			flex-wrap: wrap;
			gap: 1em;
		}

		.internal-links {
			width: 100%;
			order: 3;
		}

		.header-right {
			order: 2;
		}
	}

	@media (max-width: 480px) {
		.header-container {
			padding: 0 1em;
		}

		.internal-links {
			gap: 0;
		}

		.internal-links :global(a) {
			padding: 0.5em 0.8em;
			font-size: 0.85em;
		}
	}
	}
</style>
