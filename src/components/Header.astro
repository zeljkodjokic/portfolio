---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="header-container">
		<div class="header-left">
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<nav class="internal-links" id="nav-menu">
			<HeaderLink href="/o-meni">O meni</HeaderLink>
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/radio-amaterizam">Radio amaterizam</HeaderLink>
			<HeaderLink href="/izvidjastvo">IzviÄ‘astvo</HeaderLink>
			<HeaderLink href="/sajber-bezbednost">Sajber bezbednost</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/galerija">Galerija</HeaderLink>
			<HeaderLink href="/kontakt">Kontakt</HeaderLink>
		</nav>
		<button class="hamburger" id="hamburger-btn" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
	</div>
</header>

<style>
	header {
		margin: 0;
		padding: 1em 0;
		background: var(--telecom-primary);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}

	.header-container {
		max-width: 100%;
		width: 100%;
		margin: 0 auto;
		padding: 0 1.5em;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		gap: 3em;
		box-sizing: border-box;
	}

	.header-left {
		flex-shrink: 0;
		white-space: nowrap;
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
	}

	h2 a {
		text-decoration: none;
		color: white;
		font-weight: bold;
		letter-spacing: 0.5px;
		transition: color 0.3s ease;
	}

	h2 a:hover {
		color: #e0e0e0;
	}

	.internal-links {
		display: flex;
		gap: 0.2em;
		align-items: center;
		justify-content: center;
		flex: 1;
		flex-wrap: nowrap;
	}

	.internal-links :global(a) {
		padding: 0.6em 0.8em;
		color: white;
		text-decoration: none;
		border-radius: 0;
		transition: all 0.3s ease;
		font-weight: 500;
		font-size: 0.9em;
		border-bottom: 2px solid transparent;
		white-space: nowrap;
	}

	.internal-links :global(a:hover) {
		color: white;
		border-bottom-color: white;
	}

	.internal-links :global(a.active) {
		color: white;
		border-bottom-color: transparent !important;
	}

	.hamburger {
		display: none;
		flex-direction: column;
		gap: 5px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
	}

	.hamburger span {
		width: 25px;
		height: 3px;
		background: white;
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	.hamburger.active span:nth-child(1) {
		transform: rotate(45deg) translate(8px, 8px);
	}

	.hamburger.active span:nth-child(2) {
		opacity: 0;
	}

	.hamburger.active span:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -7px);
	}

	@media (max-width: 768px) {
		.header-container {
			justify-content: space-between;
			gap: 1em;
		}

		.internal-links {
			position: absolute;
			top: 60px;
			left: 0;
			right: 0;
			background: var(--telecom-primary);
			flex-direction: column;
			gap: 0;
			width: 100%;
			padding: 0;
			box-sizing: border-box;
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.3s ease;
			z-index: 999;
		}

		.internal-links.active {
			max-height: 500px;
			padding: 1em 0;
		}

		.internal-links :global(a) {
			width: 100%;
			padding: 1em 1.5em;
			border-radius: 0;
		}

		.hamburger {
			display: flex;
			margin-left: auto;
		}

		h2 {
			font-size: 1em;
		}
	}

	@media (max-width: 480px) {
		.header-container {
			padding: 0 1em;
		}

		h2 {
			font-size: 0.95em;
		}

		.internal-links :global(a) {
			padding: 0.8em 1.5em;
			font-size: 0.9em;
		}
	}
</style>

<script>
	const hamburgerBtn = document.getElementById('hamburger-btn');
	const navMenu = document.getElementById('nav-menu');

	if (hamburgerBtn && navMenu) {
		hamburgerBtn.addEventListener('click', () => {
			hamburgerBtn.classList.toggle('active');
			navMenu.classList.toggle('active');
		});

		// Zatvori meni kada se klikne na link
		const navLinks = navMenu.querySelectorAll('a');
		navLinks.forEach(link => {
			link.addEventListener('click', () => {
				hamburgerBtn.classList.remove('active');
				navMenu.classList.remove('active');
			});
		});
	}
</script>



