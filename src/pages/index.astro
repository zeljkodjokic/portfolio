		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				margin: 0;
				padding: 2em 1em;
				max-width: 1000px;
				margin: 0 auto;
				box-sizing: border-box;
				width: 100%;
			}
			.hero {
				text-align: center;
				margin-bottom: 3em;
				padding: 2em 0;
				border-bottom: 2px solid rgb(var(--gray-light));
			}
			.hero h1 {
				font-size: 3rem;
				margin-bottom: 0.5em;
			}
			.hero .subtitle {
				font-size: 1.3rem;
				color: rgb(var(--gray-dark));
			}
			.welcome {
				margin-bottom: 3em;
			}
			.welcome h2 {
				font-size: 2rem;
				margin-bottom: 1em;
			}
			.welcome p {
				font-size: 1.1rem;
				line-height: 1.8;
				margin-bottom: 1em;
				color: rgb(var(--gray-dark));
			}
			.highlights {
				margin-bottom: 3em;
			}
			.highlights h2 {
				font-size: 2rem;
				margin-bottom: 1.5em;
				text-align: center;
			}
			.highlight-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 1.5em;
				margin-bottom: 2em;
			}
			.highlight-card {
				padding: 1.5em;
				border: 2px solid rgb(var(--gray-light));
				border-radius: 8px;
				transition: all 0.3s ease;
			}
			.highlight-card:hover {
				border-color: rgb(var(--black));
				box-shadow: 0 4px 12px rgba(var(--black), 0.1);
			}
			.highlight-card h3 {
				font-size: 1.3rem;
				margin-bottom: 0.5em;
			}
			.highlight-card p {
				color: rgb(var(--gray-dark));
				margin-bottom: 1em;
				line-height: 1.6;
			}
			.highlight-card a {
				color: #0891b2;
				text-decoration: none;
				font-weight: 500;
			}
			.highlight-card a:hover {
				text-decoration: underline;
			}
			.blog-preview {
				margin-bottom: 3em;
				padding: 1.5em;
				background: rgb(var(--gray-light), 0.05);
				border-radius: 8px;
			}
			.blog-preview h2 {
				font-size: 1.5rem;
				margin-bottom: 1em;
			}
			.blog-preview a {
				color: #0891b2;
				text-decoration: none;
			}
			.blog-preview a:hover {
				text-decoration: underline;
			}
			.cta {
				text-align: center;
				padding: 2em;
				background: linear-gradient(135deg, rgb(var(--gray-light), 0.1), rgb(var(--gray-light), 0.05));
				border-radius: 8px;
				margin-top: 2em;
			}
			.cta h2 {
				font-size: 1.8rem;
				margin-bottom: 1em;
			}
			.cta p {
				font-size: 1.1rem;
			}
			.cta a {
				color: #0891b2;
				text-decoration: none;
				font-weight: 500;
			}
			.cta a:hover {
				text-decoration: underline;
			}

			/* Tablet responsiveness */
			@media (max-width: 768px) {
				main {
					padding: 1.5em 1em;
				}
				.hero h1 {
					font-size: 2.2rem;
				}
				.hero .subtitle {
					font-size: 1.1rem;
				}
				.welcome h2 {
					font-size: 1.5rem;
				}
				.highlights h2 {
					font-size: 1.5rem;
				}
				.highlight-card h3 {
					font-size: 1.1rem;
				}
				.cta h2 {
					font-size: 1.5rem;
				}
			}

			/* Mobile responsiveness */
			@media (max-width: 480px) {
				main {
					padding: 1em;
				}
				.hero {
					padding: 1em 0;
					margin-bottom: 2em;
				}
				.hero h1 {
					font-size: 1.8rem;
				}
				.hero .subtitle {
					font-size: 1rem;
				}
				.welcome h2 {
					font-size: 1.3rem;
				}
				.welcome p {
					font-size: 1rem;
				}
				.highlights h2 {
					font-size: 1.3rem;
				}
				.highlight-grid {
					grid-template-columns: 1fr;
					gap: 1em;
				}
				.highlight-card {
					padding: 1em;
				}
				.blog-preview {
					padding: 1em;
				}
				.blog-preview h2 {
					font-size: 1.3rem;
				}
				.cta {
					padding: 1.5em;
				}
				.cta h2 {
					font-size: 1.3rem;
				}
				.cta p {
					font-size: 1rem;
				}
			}
		</style>
	</head>
