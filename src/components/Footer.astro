<style>
	footer {
		background: white;
		color: rgb(var(--gray-dark));
		border-top: 3px solid var(--telecom-primary);
		transition: background-color 0.3s ease;
	}

	[data-theme="dark"] footer {
		background: #1a1a2e;
		color: rgb(var(--gray-dark));
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 3em 1.5em;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2em;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 0.8em;
	}

	.footer-section h3 {
		margin: 0;
		font-size: 1.2em;
		color: var(--telecom-primary);
		font-weight: 600;
	}

	.footer-section p {
		margin: 0;
		color: rgb(var(--gray-dark));
		font-size: 0.95em;
		line-height: 1.5;
	}

	.footer-section p a {
		color: var(--telecom-primary);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.footer-section p a:hover {
		text-decoration: underline;
	}

	.footer-section .location {
		font-size: 1em;
		font-weight: 500;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.6em;
	}

	.footer-section ul li a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		font-size: 0.95em;
	}

	.footer-section ul li a:hover {
		color: var(--telecom-primary);
		margin-left: 0.3em;
	}

	.social-links {
		display: flex;
		gap: 1em;
		margin-top: 0.5em;
	}

	.social-links a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: rgba(var(--gray-light), 0.1);
		border-radius: 50%;
		color: rgb(var(--gray-dark));
		transition: all 0.3s ease;
		text-decoration: none;
		border: 2px solid transparent;
	}

	.social-links a:hover {
		background: var(--telecom-primary);
		color: white;
		border-color: var(--telecom-primary);
		transform: translateY(-2px);
	}

	.footer-bottom {
		background: rgba(var(--gray-light), 0.05);
		padding: 1.5em 1.5em;
		text-align: center;
		border-top: 1px solid rgba(var(--gray-light), 0.2);
	}

	.footer-bottom p {
		margin: 0;
		color: rgb(var(--gray));
		font-size: 0.9em;
	}

	@media (max-width: 768px) {
		.footer-container {
			grid-template-columns: repeat(2, 1fr);
			gap: 1.5em;
			padding: 2em 1em;
		}

		.footer-section h3 {
			font-size: 1.1em;
		}
	}

	@media (max-width: 480px) {
		.footer-container {
			grid-template-columns: 1fr;
			padding: 1.5em 1em;
		}
	}
</style>
