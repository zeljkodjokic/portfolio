---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="header-container">
		<div class="header-left">
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<nav class="internal-links">
			<HeaderLink href="/o-meni">O meni</HeaderLink>
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/radio-amaterizam">Radio amaterizam</HeaderLink>
			<HeaderLink href="/izvidjastvo">IzviÄ‘astvo</HeaderLink>
			<HeaderLink href="/sajber-bezbednost">Sajber bezbednost</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/galerija">Galerija</HeaderLink>
			<HeaderLink href="/kontakt">Kontakt</HeaderLink>
		</nav>
	</div>
</header>

<style>
	header {
		margin: 0;
		padding: 1em 0;
		background: var(--telecom-primary);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}

	.header-container {
		max-width: 100%;
		width: 100%;
		margin: 0 auto;
		padding: 0 1.5em;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1em;
		box-sizing: border-box;
	}

	.header-left {
		flex-shrink: 0;
		white-space: nowrap;
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
	}

	h2 a {
		text-decoration: none;
		color: white;
		font-weight: bold;
		letter-spacing: 0.5px;
		transition: color 0.3s ease;
	}

	h2 a:hover {
		color: #e0e0e0;
	}

	.internal-links {
		display: flex;
		gap: 0.2em;
		align-items: center;
		justify-content: center;
		flex: 1;
		flex-wrap: nowrap;
	}

	.internal-links :global(a) {
		padding: 0.6em 0.8em;
		color: white;
		text-decoration: none;
		border-radius: 4px;
		transition: all 0.3s ease;
		font-weight: 500;
		font-size: 0.9em;
		border-bottom: 2px solid transparent;
		white-space: nowrap;
	}

	.internal-links :global(a:hover) {
		color: white;
		border-bottom-color: white;
	}

	.internal-links :global(a.active) {
		color: white;
		border-bottom: 2px solid white;
	}

	@media (max-width: 768px) {
		.header-container {
			flex-wrap: wrap;
			gap: 1em;
		}

		.internal-links {
			width: 100%;
			order: 3;
			justify-content: flex-start;
		}
	}

	@media (max-width: 480px) {
		.header-container {
			padding: 0 1em;
		}

		.internal-links {
			gap: 0;
		}

		.internal-links :global(a) {
			padding: 0.5em 0.8em;
			font-size: 0.85em;
		}
	}
</style>



